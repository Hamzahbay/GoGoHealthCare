<link rel="stylesheet" href="../../css/style.css">
<style>
    body {
        background-color: rgb(240, 240, 240);
        height: 100vh;
    }

    .container {
        margin: 5% 20%;
    }
    .container .box {
        padding: 1% 2.5%;
        border-radius: 10px;
        display: grid;
    }
    .container .box p {
        display: grid;
    }
    .container .box p span {
        margin: 1% 0;
    }
    .container .alert {
        margin: 5% 0;
    }
    .container .alert div {
        border-top: double;
        padding: 5% 10%;
        filter: opacity(.7);
    }
    .container a .back {
        background-image: linear-gradient(to bottom, rgb(50, 120, 50), rgb(132, 173, 132));
        cursor: pointer;
        padding: .25rem 0;
        border-radius: 5px;
    }
    .container .alert .cetak {
        padding: 1% 0;
        border: none;
        filter: opacity(1);
        border-radius: 5px;
        margin: 2.5% 0;
        background-image: linear-gradient(to bottom, rgb(50, 120, 50), rgb(132, 173, 132));
        cursor: pointer;
    }
    .container .cetak:hover {
        background-image: linear-gradient(to top, rgb(50, 120, 50), rgb(132, 173, 132));
    }
    .container a .back:hover {
        background-image: linear-gradient(to top, rgb(50, 120, 50), rgb(132, 173, 132));
    }
    @media( max-width: 800px ) {
        .container {
            margin: 20% 5%;
        }
    }
</style>

